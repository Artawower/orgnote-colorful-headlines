{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "module": "es2015",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
